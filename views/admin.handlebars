<div class="admin-container">
    <div class="container-fluid admin-form-container">
        <form action="/movie" method="post">
            <h2>Create A Movie</h2>
            <!--movie title-->
            <div class="form-group row">
                <label for="title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input name="title" type="text" class="form-control" id="title" placeholder="Movie Title" required>
                </div>
            </div>
            <!--movie summery-->
            <div class="form-group row">
                <label for="summary" class="col-sm-2 col-form-label">Summery</label>
                <div class="col-sm-10">
                    <textarea name="summary" rows="4" cols="50" class="form-control" id="summary" placeholder="summery" required></textarea>
                </div>
            </div>
            <!--photo preview-->
            <div class="form-group row">
                <div class="preview-container">
                    <h4 class="text-xs-center">Preview</h4>
                    <img id="preview" src="/img/default.png" height="200px">
                </div>
            </div>
            <!--photo upload-->
            <div class="form-group row">
                <label for="cover" class="col-sm-2 col-form-label">Movie Poster</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control-file" id="cover-input" placeholder="Movie poster image" required>
                </div>
            </div>
            <!--photo input-->
            <input name="coverURL" type="hidden" class="form-control" id="coverurl-input" required>
            <!--sumbmit button-->
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <button type="submit" class="btn btn-movie">Create Movie</button>
                </div>
            </div>

        </form>
    </div>
</div>



